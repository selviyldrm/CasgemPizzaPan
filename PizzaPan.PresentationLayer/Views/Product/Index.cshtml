@model List<PizzaPan.EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Listesi</h1>

<table class="table table-bordered">
   <tr>
       <th>Ürün Adı</th>
       <th>Ürün Açıklaması</th>
       <th>Ürün Resim</th>
       <th>Ürün Fiyat</th> 
       <th>Ürün Kategorisi</th>
       <th>Sil</th>
       <th>Güncelle</th>
   </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" width="50" height="50" /></td>
            <td>@item.Price</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/AddProduct/" class="btn btn-dark">Yeni Ürün Ekle</a>