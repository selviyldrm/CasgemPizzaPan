@model PizzaPan.EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Referans Ekleme Sayfası</h1>

<form method="post">
    <label>Referans Adı</label>
    <input type="text" asp-for="CustomerName"  class="form-control" style="background-color:lightgrey"/>
    <br /> 
    <label>Başlık</label>
    <input type="text" asp-for="CustomerTitle"  class="form-control" style="background-color:lightgrey" />
    <br />  
    <label>Yorum</label>
    <input type="text" asp-for="Comment"  class="form-control" style="background-color:lightgrey"/>
    <br />
    <label>Resim</label>
    <input type="text" asp-for="ImageUrl"  class="form-control" style="background-color:lightgrey"/>
    <br />
    <button class="btn btn-info"> Referans Ekle</button>
</form>